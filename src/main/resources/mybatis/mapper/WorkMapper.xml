<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="choi.oop.repository.mapper.WorkMapper">
    <resultMap id="WorkResultMap" type="Work">
        <id     property="id"                   column="id" />
        <result property="userId"               column="user_id" />
        <result property="templateId"           column="template_id" />
        <result property="name"                 column="name" />
        <result property="createdDatetime"      column="created_datetime" />
        <result property="updatedDatetime"      column="updated_datetime" />
    </resultMap>

    <insert id="insert" parameterType="Work">
        INSERT INTO works (
            user_id,
            template_id,
            name
        ) VALUES (
            #{userId},
            #{workTemplateId},
            #{name}
        )
    </insert>

    <select id="select" parameterType="Long" resultMap="WorkResultMap">
        SELECT
            id,
            user_id,
            template_id,
            name,
            created_datetime,
            updated_datetime
        FROM works
        WHERE id = #{workId}
    </select>

    <select id="selectByTemplateId" parameterType="Long" resultMap="WorkResultMap">
        SELECT
            id,
            user_id,
            template_id,
            name,
            created_datetime,
            updated_datetime
        FROM works
        WHERE template_id = #{templateId}
    </select>

    <update id="update" parameterType="Work">
        UPDATE works
        SET name = #{name},
            updated_datetime = #{updatedDatetime}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="Long">
        DELETE FROM works
        WHERE id = #{workId}
    </delete>
</mapper>
